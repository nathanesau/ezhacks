  {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal"
      },
      {
        "name": "Python: ezhacks-app (ezhacks-app.py)",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "ezhacks-app.py",
          "FLASK_ENV": "development",
          "FLASK_DEBUG": "1"
        },
        "args": [
          "run",
          "--port=5000"
        ],
        "jinja": true,
        "cwd": "${workspaceFolder}/ezhacks-app"
      }
    ]
  }